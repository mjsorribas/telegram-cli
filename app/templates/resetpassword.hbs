<!-- Main white box -->
<div class="home-box">

  <!-- Left part of white box area -->
  <div class="left-box">
    <div class="telegram-box">
      <img class="telegram" src="images/telegram-logo.png" alt="Telegram">
    </div>
  </div>

  <!-- Left part of white box area -->
  <div class="right-box">
    
    <div class="inner-right-box"> 

      <div class="postmark-box">
        <img class="postmark" src="images/postmark.png" alt="Postmark">
      </div>

      <div class="login-form">
        <p class="get-going">Reset password</p>
        <form {{action sendpass on="submit"}}>
          {{input value=username class="username-password" type="text" placeholder="Enter your username ..."}}
          {{input value=email class="username-password" type="text" placeholder="Enter your email ..."}}
          <button class="login-button" type="submit">Reset password</button>
        </form>
      </div>

    </div><!--END inner-right-box -->   

  </div><!--END right-box --> 

</div>