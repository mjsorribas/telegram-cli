<!-- Main white box -->
<div class="home-box">

  <!-- Left part of white box area -->
  <div class="left-box">
    <div class="telegram-box">
      <img class="telegram" src="images/telegram-logo.png" alt="Telegram">
    </div>
  </div>

  <!-- Right part of white box area -->
  <div class="right-box">
    
    <div class="inner-right-box"> 

      <div class="postmark-box">
        <img class="postmark" src="images/postmark.png" alt="Postmark">
      </div>

      <div class="login-form">
        <p class="get-going">Check you inbox!</p>
        <p class="recoveryText">We've sent you a recovery password to your email</p>
      </div>
      <div class="login-form">
        {{#link-to 'login' class="recover-pass"}}Login{{/link-to}}
      </div>
    </div><!--END inner-right-box -->   

  </div><!--END right-box --> 
</div>